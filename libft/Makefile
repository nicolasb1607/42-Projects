CC = gcc
CFLAGS = -Wall -Wextra -Werror
EXEC = libft.a
SRCS = ./ft_atoi.c \
	./ft_bzero.c \
	./ft_calloc.c \
	./ft_isalnum.c \
	./ft_isalpha.c \
	./ft_isascii.c \
	./ft_isdigit.c \
	./ft_isprint.c \
	./ft_memchr.c \
	./ft_memcmp.c \
	./ft_memcpy.c \
	./ft_memset.c \
	./ft_strchr.c \
	./ft_strdup.c \
	./ft_strlcat.c \
	./ft_strlcpy.c \
	./ft_strlen.c \
	./ft_strncmp.c \
	./ft_strnstr.c \
	./ft_strrchr.c \
	./ft_tolower.c \
	./ft_toupper.c \
	./ft_substr.c \
	./ft_strjoin.c \
	./ft_strtrim.c \
	./ft_split.c \
	./ft_itoa.c \
	./ft_striteri.c \
	./ft_strmapi.c \
	./ft_strcpy.c \
	./ft_putchar_fd.c \
	./ft_putstr_fd.c \
	./ft_putendl_fd.c \
	./ft_putnbr_fd.c \

BONUS = 

INCLUDES = libft.h
OBJS_SRCS = ${SRCS:.c=.o}
OBJS_BONUS = ${BONUS:.c=.o}

all : $(EXEC)

bonus : $(OBJS_BONUS)
		ar rcs $(EXEC) $(OBJS_SRCS) $(OBJS_BONUS) 

$(EXEC) : $(OBJS_SRCS)
		ar rcs $(EXEC) $(OBJS_SRCS)

.o : .c
	$(CC) $(CFLAGS) -c $< -o $@ -I $(INCLUDES)

clean :
	rm *.o

fclean : clean
	rm $(EXEC)

re : fclean all

.PHONY : clean fclean re